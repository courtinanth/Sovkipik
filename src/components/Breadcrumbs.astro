---
interface Props {
    items: {
        label: string;
        href: string;
    }[];
    className?: string;
}

const { items, className = "" } = Astro.props;
---

<nav
    aria-label="Fil d'ariane"
    class={`text-sm text-earth-dark/70 ${className}`}
>
    <ol class="flex flex-wrap items-center gap-2">
        <li>
            <a
                href="/"
                class="hover:text-highlight transition-colors flex items-center gap-1"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="14"
                    height="14"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    ><path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"
                    ></path><polyline points="9 22 9 12 15 12 15 22"
                    ></polyline></svg
                >
                Accueil
            </a>
        </li>
        {
            items.map((item, index) => (
                <li class="flex items-center gap-2">
                    <span class="opacity-50">/</span>
                    {index === items.length - 1 ? (
                        <span class="font-bold text-forest" aria-current="page">
                            {item.label}
                        </span>
                    ) : (
                        <a
                            href={item.href}
                            class="hover:text-highlight transition-colors"
                        >
                            {item.label}
                        </a>
                    )}
                </li>
            ))
        }
    </ol>
</nav>
